<h1>Burgers!</h1>

<h2>Burgers are Yummy!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
     {{this.burger_name}}
     {{/unless}}
  {{/each}}
</ul>

<h2>That burger is DEVOURED!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{this.burger_name}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form action="/api/burgers" method="POST" class="create-form">
  <div class="form-group">
    <label for="bg">Burger Name:</label>
    <input type="text" id="bg" name="burger_name">
  </div>

